{
  "name": "registrace-app",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/style.css --minify",
    "dev": "npm run build:css && wrangler pages dev ./public --d1=DB=registrace-db",
    "build": "npm run build:css",
    "deploy": "npm run build && wrangler pages deploy ./public",
    "db:migrate": "wrangler d1 execute registrace-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute registrace-db --local --file=./schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.99.0"
  }
}